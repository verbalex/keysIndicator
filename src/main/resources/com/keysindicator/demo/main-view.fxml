<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="185.0" prefWidth="347.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.keysindicator.demo.MainController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
         <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
            
              <Label fx:id="welcomeText" text="Message position:" />
            </children>
         </VBox>
         <VBox prefHeight="200.0" prefWidth="100.0">
            <children>
               <Label text="X:" />
               <TextField fx:id="keysTextXTextField"/>
               <Label text="Y:" />
               <TextField fx:id="keysTextYTextField"/>
            </children>
         </VBox>
      </children>
   </HBox>
   <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
         <Label text="Message color:" />
         <ColorPicker fx:id="keysLabelColorPicker"/>
      </children>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
   </HBox>
  <Button onAction="#onSaveButtonClick" text="Save" />
</VBox>
